div#header
    @media (max-width: sm-max-width)
        display  none

    height: 155px;
    margin-bottom: 31px;
    margin-top: 0px

.gallery-header
    > img
        width 100%

.responsive-header
    background-color white
    text-align center
    > img
        width 100%
        max-width 667px

    display none
    @media (max-width: sm-max-width)
        display block

div#joke
    @media (min-width: md-min-width)
        height 465px
        margin 0px 204px 0px 187px

    @media (max-width: sm-max-width)
        padding-bottom  13px
        background-color white
        img
            width 98%
            max-width 530px

    margin-bottom: 15px;
    text-align: center

div#tools
    padding-top 17px

    .links
        margin-top 13px
        margin-bottom 13px

        table
            width 80%
            margin 0 auto
            td
                text-align center

    @media (min-width: md-min-width)
        margin-top 20px
        margin-left 181px
        margin-right 197px

    @media (max-width: sm-max-width)
        width 100%

    overflow hidden

    > #navigation
        text-align center
        margin 0px auto

#bottom
    text-align center
    margin 0 auto
    @media (min-width: md-min-width)
        width container-width

    @media (max-width: sm-max-width)
        width 100%

.footer-push
    height footer-height + footer-margin-top

#bottom
    height footer-height

a {
    text-decoration: none;
    color: black
}

div {
    margin: 0px
}

.left {
    float: left
}

.right {
    float: right
}

#footer
    text-align center
    padding-right 21px
    margin 0px auto

#footer * {
    font-family: "Asap",sans-serif;
    font-size: 9pt;
    color: #111;
    text-decoration: none
}

body.gallery div#container {
    background-image: url(/i/background-gallery.jpg);
    background-position: 7px 0px
}

div#gallery
    text-align center
    margin 0px auto

    width 563px
    @media (max-width: 629px)
        width 423px

    @media (max-width: 460px)
        width 281px

    @media (max-width: 296px)
        width 100%

    overflow hidden
    padding-bottom 20px

div.gallery-part
    overflow: hidden

div.gallery-item {
    padding: 5px;
    border: solid 1px gray;
    margin: 5px;
    float: left;
    background: white
}

body.gallery div#header {
    height: 155px
}

body.gallery div#container {
    min-height: 1000px
}
