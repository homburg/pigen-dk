sm-max-width = 750px
md-min-width = 751px

html,body,div,span,applet,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,abbr,acronym,address,big,cite,code,del,dfn,em,img,ins,kbd,q,s,samp,small,strike,strong,sub,sup,tt,var,b,u,i,center,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td,article,aside,canvas,details,embed,figure,figcaption,footer,header,hgroup,menu,nav,output,ruby,section,summary,time,mark,audio,video {
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    font-size: 100%;
    vertical-align: baseline
}

html {
    line-height: 1
}

ol,ul {
    list-style: none
}

table {
    border-collapse: collapse;
    border-spacing: 0
}

caption,th,td {
    text-align: left;
    font-weight: normal;
    vertical-align: middle
}

q,blockquote {
    quotes: none
}

q:before,q:after,blockquote:before,blockquote:after {
    content: "";
    content: none
}

a img {
    border: none
}

article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section,summary {
    display: block
}

.hide {
    display: none
}

body {
    font-family: monospace, sans
}

div#container
    margin: 0px auto;

    @media (min-width: md-min-width)
        background-image url("/i/background.jpg")
        width 751px

    @media (max-width: sm-max-width)
        width 100%
        background-image url("/i/background-gallery.jpg")
        background-size contain
        background-position no-repeat center

    background-repeat: no-repeat;
    box-sizing: border-box;

    min-height: 1000px;
    margin-top: 10px

div#header
    @media (max-width: sm-max-width)
        display  none

    height: 155px;
    margin-bottom: 31px;
    margin-top: 0px

.responsive-header
    > img
        width 100%

    display none
    @media (max-width: sm-max-width)
        display block

div#joke
    @media (min-width: md-min-width)
        height 465px
        margin: 0px 204px 0px 187px;

    @media (max-width: sm-max-width)
        img
            width 78%

    margin-bottom: 15px;
    padding-top: 4px;
    text-align: center

div#tools
    .links
        margin-top 13px
        margin-bottom 13px
        table
            width 100%
            td:nth-child(1)
                text-align left

            td:nth-child(2)
                text-align center

            td:nth-child(3)
                text-align right

    @media (min-width: md-min-width)
        margin-top 20px
        margin-left 181px
        margin-right 197px

    @media (max-width: sm-max-width)
        width 240px
        margin 0px auto

    height 100%
    padding-top 8px
    overflow hidden

div#tools>#navigation {
    text-align: center;
    margin: 0px auto
}

div#tools #share-left>div {
    text-align: left
}

div#tools #share-right>div {
    text-align: right
}

a {
    text-decoration: none;
    color: black
}

div {
    margin: 0px
}

.left {
    float: left
}

.right {
    float: right
}

#footer {
    text-align: center;
    margin: 0px auto;
    padding-right: 21px;
    padding-top: 10px;
    padding-bottom: 20px
}

#footer * {
    font-family: "Asap",sans-serif;
    font-size: 9pt;
    color: #111;
    text-decoration: none
}

body.gallery div#container {
    background-image: url(/i/background-gallery.jpg);
    background-position: 7px 0px
}

div#gallery
    text-align center
    margin 0px auto
    width 563px
    @media (max-width: sm-max-width)
        width: 100%

    overflow hidden
    padding-bottom 20px

div.gallery-part {
    overflow: hidden
}

div.gallery-item {
    padding: 5px;
    border: solid 1px gray;
    margin: 5px;
    float: left;
    background: white
}

body.gallery div#header {
    height: 155px
}

body.gallery div#container {
    min-height: 1000px
}
