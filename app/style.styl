sm-max-width = 750px
md-min-width = 751px
container-width = 751px
footer-height = 54px
footer-margin-top = 360px
pigen-pink = #F8C5D1

*
    margin 0
    padding 0
    border 0

html {
    line-height: 1
}

ol,ul {
    list-style: none
}

table {
    border-collapse: collapse;
    border-spacing: 0
}

caption,th,td {
    text-align: left;
    font-weight: normal;
    vertical-align: middle
}

q,blockquote {
    quotes: none
}

q:before,q:after,blockquote:before,blockquote:after {
    content: "";
    content: none
}

a img {
    border: none
}

article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section,summary {
    display: block
}

.hide {
    display: none
}

body, html
    height 100%
    min-height 100%

body {
    font-family: monospace, sans
}

div#container
    min-height 100%
    margin 0px auto (-1 * footer-height)
    @media (min-width: md-min-width)
        background-image url("/i/background.jpg")
        width container-width

    @media (max-width: sm-max-width)
        width 100%
        background-image url("/i/background-loop.jpg")
        background-repeat repeat-y
        background-size 113%
        background-position center

    background-repeat: no-repeat;
    box-sizing: border-box;

